{
  "private": true,
  "name": "Sportsbet.io",
  "scripts": {
    "commit": "git-cz",
    "build": "tsc -b",
    "clean": "rm -rf ./packages/*/lib ./packages/*/dist ./packages/*/.cache",
    "nuke": "yarn clean && rm -rf node_modules/",
    "format": "prettier --write",
    "lint:ts-validate": "tslint-config-prettier-check ./tslint.json",
    "lint:ts": "lerna run lint:ts --stream --parallel",
    "docz:dev": "concurrently -kill-others \"yarn build -w\" \"docz dev\"",
    "docz:build": "yarn build && docz build",
    "docz:serve": "cd .docz/dist && python -m SimpleHTTPServer 3000",
    "cashier": "yarn build && lerna run --scope @heathmont/sportsbet-wip-cashier --stream",
    "publish:packages": "lerna publish --yes"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,mdx}": [
      "yarn format",
      "git add"
    ],
    "*.{ts,tsx}": [
      "yarn format",
      "yarn lint:ts",
      "git add"
    ]
  },
  "dependencies": {
    "@emotion/core": "10.0.6",
    "@emotion/styled": "10.0.6",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "polished": "2.3.3",
    "react": "16.7.0",
    "react-dom": "16.7.0"
  },
  "devDependencies": {
    "commitizen": "3.0.5",
    "concurrently": "4.1.0",
    "cz-conventional-changelog": "2.1.0",
    "docz": "0.13.7",
    "docz-theme-default": "0.13.7",
    "husky": "1.3.1",
    "lerna": "3.8.5",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "tslint": "5.12.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-microsoft-contrib": "6.0.0",
    "typescript": "3.2.2"
  }
}
