{
  "private": true,
  "name": "Sportsbet.io",
  "scripts": {
    "commit": "git-cz",
    "build": "lerna run --parallel build:index && tsc -b",
    "dev:docs": "concurrently -kill-others \"yarn build -w\" \"lerna run --scope docs --stream dev\"",
    "clean": "rimraf {packages,docs}/**/{lib,dist,.cache,public}/",
    "nuke": "yarn clean && rimraf node_modules {packages,docs}/**/node_modules docs/.cache",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "node --max_old_space_size=2048 ./node_modules/.bin/jest --config .config/jest/jest.config.js --verbose --logHeapUsage",
    "assets": "lerna run --scope @heathmont/sportsbet-assets --stream",
    "icons": "lerna run --scope @heathmont/sportsbet-icons --stream",
    "docs": "lerna run --scope docs --stream",
    "postinstall": "yarn build",
    "update:packages": "yarn lernaupdate",
    "publish:packages": "lerna publish --yes",
    "publish:packages@beta": "lerna publish --canary --preid beta --no-push --dist-tag beta --force-publish"
  },
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": "@heathmont/prettier-config-sportsbet",
  "eslintConfig": {
    "root": true,
    "extends": [
      ".config/eslint/.eslintrc.js"
    ]
  },
  "eslintIgnore": [
    ".cache",
    ".config/eslint",
    "dist",
    "lib",
    "node_modules",
    "public"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,html,css,md,mdx,yml}": [
      "yarn prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@heathmont/eslint-config-sportsbet": "0.1.3",
    "@heathmont/prettier-config-sportsbet": "0.1.0",
    "@svgr/cli": "4.1.0",
    "@svgr/plugin-jsx": "4.1.0",
    "@types/jest": "24.0.11",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "@types/react-test-renderer": "16.8.0",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "barrelsby": "2.1.1",
    "commitizen": "4.0.3",
    "concurrently": "4.1.2",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.0.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.11.0",
    "husky": "3.0.4",
    "jest": "24.3.1",
    "jest-emotion": "10.0.9",
    "lerna": "3.16.4",
    "lerna-update-wizard": "0.16.0",
    "lint-staged": "9.2.3",
    "prettier": "1.18.2",
    "react-test-renderer": "16.8.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.0.0",
    "typescript": "3.3.3"
  }
}
