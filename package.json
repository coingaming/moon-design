{
  "private": true,
  "name": "moon-design",
  "scripts": {
    "watch": "pnpm --filter ./packages --parallel -r run chokidar ",
    "next": "pnpm run --filter next-docs",
    "commit": "git-cz",
    "build": "pnpm -r run build --filter ./packages",
    "clean": "rimraf packages/**/lib && pnpm run clean:docs",
    "clean:docs": "rimraf next-docs/{lib,dist,.cache}",
    "nuke": "pnpm run clean && rimraf next-docs/.next/ && rimraf packages/**/node_modules/ && rimraf next-docs/node_modules/ && rimraf node_modules/",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "publish:packages": "pnpm publish -r --filter ./packages",
    "publish:beta": "pnpm publish -r --tag beta --access public --force --filter ./packages ",
    "publish:alpha": "pnpm publish -r --tag alpha --access public --force --filter ./packages"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      ".config/eslint/.eslintrc.js"
    ]
  },
  "eslintIgnore": [
    ".cache",
    ".config/eslint",
    "dist",
    "lib",
    "node_modules",
    "public"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,html,css,mdx,yml}": [
      "yarn prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.6.4",
    "@babel/core": "7.6.4",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.6.3",
    "@babel/preset-react": "7.6.3",
    "@babel/preset-typescript": "7.12.7",
    "@changesets/cli": "^2.17.0",
    "@svgr/cli": "4.1.0",
    "@svgr/plugin-jsx": "4.1.0",
    "@types/jest": "24.0.11",
    "@types/react": "16.9.9",
    "@types/react-dom": "16.9.2",
    "@types/react-test-renderer": "16.9.2",
    "@types/styled-components": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "babel-jest": "24.3.1",
    "babel-plugin-styled-components": "1.10.6",
    "barrelsby": "2.2.0",
    "chokidar-cli": "3.0.0",
    "commander": "4.0.1",
    "commitizen": "4.0.3",
    "concurrently": "4.1.2",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "7.18.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.2",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.11.0",
    "husky": "3.0.4",
    "jest": "24.3.1",
    "jest-styled-components": "6.3.3",
    "lerna": "3.16.4",
    "lint-staged": "9.2.3",
    "prettier": "2.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "3.0.0",
    "styled-components": "5.2.1",
    "typescript": "4.1.3"
  },
  "resolutions": {
    "@types/react": "16.9.9",
    "@types/react-dom": "16.9.2"
  }
}
