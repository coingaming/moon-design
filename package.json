{
  "private": true,
  "name": "Sportsbet.io",
  "scripts": {
    "commit": "git-cz",
    "build": "tsc -b",
    "clean": "rimraf {design,docs,portals}/**/{lib,dist,.cache,public}/",
    "nuke": "yarn clean && rimraf node_modules **/node_modules",
    "format": "prettier --write",
    "lint:ts-validate": "tslint-config-prettier-check ./tslint.json",
    "lint:ts": "lerna run lint:ts --stream --parallel",
    "test": "jest --config .config/jest/jest.config.js --verbose",
    "user-portal": "yarn build && lerna run --scope @heathmont/sportsbet-wip-user-portal --stream",
    "components": "lerna run --scope @heathmont/sportsbet-components --stream",
    "icons": "lerna run --scope @heathmont/sportsbet-icons --stream",
    "docs:dev": "concurrently -kill-others \"yarn build -w\" \"lerna run --scope docs --stream dev\"",
    "docs:build": "yarn build && lerna run --scope docs --stream build",
    "docs:serve": "lerna run --scope docs --stream serve",
    "postinstall": "yarn build",
    "publish:packages": "lerna publish --yes",
    "bundlesize": "yarn user-portal bundlesize"
  },
  "workspaces": [
    "docs",
    "design/*",
    "portals/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,js,json,css,md,mdx,yml}": [
      "yarn format",
      "git add"
    ],
    "*.{ts,tsx}": [
      "yarn format",
      "yarn lint:ts",
      "git add"
    ]
  },
  "dependencies": {
    "@emotion/core": "10.0.9",
    "@emotion/styled": "10.0.9",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "polished": "3.0.0",
    "react": "16.8.1",
    "react-dom": "16.8.1"
  },
  "devDependencies": {
    "@svgr/cli": "4.1.0",
    "@types/jest": "24.0.11",
    "@types/react-test-renderer": "16.8.0",
    "commitizen": "3.0.5",
    "concurrently": "4.1.0",
    "cz-conventional-changelog": "2.1.0",
    "husky": "1.3.1",
    "jest": "24.3.1",
    "jest-emotion": "10.0.9",
    "lerna": "3.11.0",
    "lint-staged": "8.1.3",
    "prettier": "1.16.4",
    "react-test-renderer": "16.8.1",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.0",
    "tslint": "5.12.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-microsoft-contrib": "6.0.0",
    "typescript": "3.3.3"
  }
}
