{
  "private": true,
  "name": "Sportsbet.io",
  "scripts": {
    "start": "yarn docs dev",
    "commit": "git-cz",
    "build": "yarn build:index && yarn build:js && yarn build:types",
    "build:index": "lerna exec --parallel --no-private --ignore '@heathmont/sportsbet-{global,icons}' -- barrelsby --config '$LERNA_ROOT_PATH/.config/barrelsby/barrelsby.json' --directory src",
    "build:js": "lerna exec --parallel --no-private -- babel --config-file '$LERNA_ROOT_PATH/.config/babel/babel.config.js' src --out-dir lib --source-maps --extensions '.ts,.tsx'",
    "build:types": "lerna exec --no-private -- tsc --emitDeclarationOnly --declarationMap",
    "watch:js": "yarn build:js --watch",
    "watch:types": "lerna exec --parallel --no-private -- tsc --watch --noEmit",
    "clean": "rimraf {packages}/**/{lib,dist} docs/{lib,dist,.cache,public}",
    "nuke": "yarn clean && lerna clean --yes && rimraf node_modules/",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "node --max_old_space_size=2048 ./node_modules/.bin/jest --config .config/jest/jest.config.js --verbose --logHeapUsage",
    "assets": "lerna run --scope @heathmont/sportsbet-assets --stream",
    "icons": "lerna run --scope @heathmont/sportsbet-icons --stream",
    "docs": "lerna run --scope docs --stream",
    "publish:packages": "lerna publish --yes",
    "publish:packages@beta": "lerna publish --canary --preid beta --no-push --dist-tag beta --force-publish"
  },
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": "@heathmont/prettier-config-sportsbet",
  "eslintConfig": {
    "root": true,
    "extends": [
      ".config/eslint/.eslintrc.js"
    ]
  },
  "eslintIgnore": [
    ".cache",
    ".config/eslint",
    "dist",
    "lib",
    "node_modules",
    "public"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,html,css,md,mdx,yml}": [
      "yarn prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.6.4",
    "@babel/core": "7.6.4",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.6.3",
    "@babel/preset-react": "7.6.3",
    "@babel/preset-typescript": "7.6.0",
    "@emotion/babel-preset-css-prop": "10.0.23",
    "@heathmont/eslint-config-sportsbet": "0.1.3",
    "@heathmont/prettier-config-sportsbet": "0.1.0",
    "@svgr/cli": "4.1.0",
    "@svgr/plugin-jsx": "4.1.0",
    "@types/jest": "24.0.11",
    "@types/react": "16.9.9",
    "@types/react-dom": "16.9.2",
    "@types/react-test-renderer": "16.8.0",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "barrelsby": "2.1.1",
    "commitizen": "4.0.3",
    "concurrently": "4.1.2",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.0.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.11.0",
    "husky": "3.0.4",
    "jest": "24.3.1",
    "jest-emotion": "10.0.9",
    "lerna": "3.16.4",
    "lint-staged": "9.2.3",
    "prettier": "1.18.2",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-test-renderer": "16.10.2",
    "rimraf": "3.0.0",
    "ts-jest": "24.0.0",
    "typescript": "3.3.3"
  },
  "resolutions": {
    "@types/react": "16.9.9",
    "@types/react-dom": "16.9.2"
  }
}
