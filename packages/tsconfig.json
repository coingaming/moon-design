{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "../",
    // Alias our package names to the appropriate directory.
    // e.g. "@heathmont/sportsbet-tokens" => "./packages/tokens/src"
    "paths": {
      "@heathmont/sportsbet-*": ["./packages/*/src"]
    }
  }
}
