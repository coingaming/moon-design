{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "../",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // @TODO Consider downgrading styled-components types instead
    "skipLibCheck": true,
    // Alias our package names to the appropriate directory.
    // e.g. "@heathmont/sportsbet-tokens" => "./packages/tokens/src"
    "paths": {
      "@heathmont/sportsbet-*": ["./packages/*/src", "./docs/src"]
    }
  }
}
